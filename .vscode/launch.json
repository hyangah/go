{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "apiVersion": 2,
      "program": "${workspaceFolder}/bubblesorter/cmd/bubblesorter",
      "args": ["4", "3", "2", "1"]
    },
    {
      "name": "Launch test function",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFoler}/bubblesorter",
      "args": ["-test.run", "TestBubbleSort"]
    },
    {
      "name": "Attach local process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 1859211,
      "apiVersion": 2,
      "showLog": true
    },
    {
      "name": "Attach remote process",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 2345,
      "host": "127.0.0.1",
      "apiVersion": 2,
      "showLog": true
    }
  ]
}
