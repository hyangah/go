{
  "name": "Go",
  "dockerFile": "Dockerfile",
  // set workspace mount path
  "workspaceMount": "source=${localWorkspaceFolder},target=/go/src/github.com/vscode-debug-specs/go,type=bind,consistency=delegated",
  // "workspaceMount": "target=/go/src/github.com/vscode-debug-specs/go",
  "workspaceFolder": "/go/src/github.com/vscode-debug-specs/go",
  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "go.gopath": "/go"
  },
  "extensions": [
    // for all repos
    "editorconfig.editorconfig",
    "esbenp.prettier-vscode",
    // fot go
    "golang.Go",
    "hbenl.vscode-test-explorer",
    "ethan-reesor.vscode-go-test-adapter"
  ],
  // If you use Rootless Docker, should comment out
  "remoteUser": "vscode"
}
